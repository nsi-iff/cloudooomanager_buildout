#!/usr/bin/env python
# coding: utf-8
from os.path import dirname, abspath
from sys import path

ROOT = abspath(dirname(__file__))
path.append(ROOT)

import cyclone.web
from twisted.application import service, internet
from nsi.cloudooomanager.http import HttpHandler
from nsi.cloudooomanager.auth import Authentication
from ConfigParser import RawConfigParser

CONF = '${conf-path}'
DB_FILE = '${db-file}'

CLOUDOOO_URL = '${cloudooo:url}'

SAM_URL = '${sam:url}'
SAM_USER = '${sam:user}'
SAM_PASS = '${sam:pass}'


def get_authenticator(conf):
    return Authentication(DB_FILE)

class CloudoooManager(cyclone.web.Application):

    def __init__(self):
        handlers = [
            (r"/", HttpHandler),
        ]

        settings = {
            "auth": get_authenticator(CONF),
            "cloudooo_url": CLOUDOOO_URL,
            "sam_url": SAM_URL,
            "sam_user": SAM_USER,
            "sam_pass": SAM_PASS,
        }

        cyclone.web.Application.__init__(self, handlers, **settings)


application = service.Application("CloudoooManager")
srv = internet.TCPServer(${port}, CloudoooManager(), interface='${host}')
srv.setServiceParent(application)

